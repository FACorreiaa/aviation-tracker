package pages

import (
	"github.com/FACorreiaa/Aviation-tracker/controller/models"
	"github.com/FACorreiaa/Aviation-tracker/controller/html/components"
)

templ LayoutPage(layout models.LayoutTempl) {
	<!DOCTYPE html>
	<html lang="en" data-theme="nord">
		<head>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<title>{ layout.Title } - AviTracker</title>
			<link rel="stylesheet" href="/static/css/output.css"/>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v8.2.0/ol.css"/>
			<link rel="preconnect" href="https://fonts.googleapis.com"/>
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
			<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet"/>
			<link href="https://cdn.jsdelivr.net/npm/daisyui@4.5.0/dist/full.min.css" rel="stylesheet" type="text/css"/>
			<script src="https://unpkg.com/htmx.org@1.9.10"></script>
			<script src="https://cdn.jsdelivr.net/npm/ol@v8.2.0/dist/ol.js"></script>
			<script src="https://unpkg.com/@popperjs/core@2"></script>
			<script src="https://unpkg.com/tippy.js@6"></script>
		</head>
		<body hx-boost="true">
			<div class="flex flex-col h-screen font-lato" id="contents">
				@components.NavbarComponent(layout.Nav, layout.User, layout.ActiveNav)
				<div class="h-full">
					@layout.Content
				</div>
				@components.FooterComponent()
			</div>
		</body>
	</html>
}
