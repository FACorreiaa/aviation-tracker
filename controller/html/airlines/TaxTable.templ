package airline

import (
	"github.com/FACorreiaa/Aviation-tracker/controller/models"
	"github.com/FACorreiaa/Aviation-tracker/controller/html/components"

	"fmt"
	"strconv"
)

templ AirlineTaxTable(tax models.TaxTable) {
	<div class="flex flex-col items-left">
		@components.InputComponent("Search by Airline Name", "/airlines/tax")
		<div class="overflow-x-auto">
			<table class="table table-zebra">
				<!-- head -->
				<thead>
					<tr>
						for _, col := range tax.Column {
							<th>
								<div class="flex justify-start align-middle" hx-boost>
									{ col.Title }
									<form class="join" hx-boost="true" method="get">
										<a
											class="pl-4"
											href={ templ.URL(fmt.Sprintf("/airlines/tax?orderBy=%s&sortBy=%s", col.Title, col.SortParam)) }
										>
											@col.Icon
										</a>
									</form>
								</div>
							</th>
						}
					</tr>
				</thead>
				<!-- rows -->
				<tbody>
					for _, t := range tax.Tax {
						<tr class="hover">
							<td>{ t.TaxName }</td>
							<td>{ t.AirlineName }</td>
							<td>{ t.CountryName }</td>
						</tr>
					}
				</tbody>
			</table>
			<!-- paginator -->
			<div class="flex justify-center mt-10">
				<form class="join" hx-boost="true" method="get">
					<a
						class="join-item btn"
						href={ templ.URL("/airlines/tax") }
					>First Page</a>
					<a
						class="join-item btn"
						href={ templ.URL(fmt.Sprintf("/airlines/tax?page=%d", tax.PrevPage)) }
					>«</a>
					<button class="join-item btn disabled">{ strconv.Itoa(tax.Page) }</button>
					<a
						class="join-item btn"
						href={ templ.URL(fmt.Sprintf("/airlines/tax?page=%d", tax.NextPage)) }
					>»</a>
					<a
						class="join-item btn"
						href={ templ.URL(fmt.Sprintf("/airlines/tax?page=%d", tax.LastPage)) }
					>Last Page</a>
				</form>
			</div>
		</div>
	</div>
}
